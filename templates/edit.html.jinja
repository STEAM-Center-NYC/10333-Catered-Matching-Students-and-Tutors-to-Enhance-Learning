<body>
  {%with messages = get_flashed_messages()%}
  {%if messages%}
  {%for message in messages%}
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <h3>{{ message }}</h3>
  </div>
  {%endfor%}
  {%endif%}
  {%endwith%}

  <header class="header-area header-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="/home" class="logo border-btn2">
              <h1>Tutoria</h1>
            </a>
            <!-- ***** Logo End ***** -->
            <!-- ***** Serach Start ***** -->

            <!-- ***** Serach Start ***** -->
            <!-- ***** Menu Start ***** -->
            <ul class="nav top">
            </ul>
            <a class='menu-trigger'>
              <span>Menu</span>
            </a>
            <div class="action">
              <div class="profile" onclick="menuToggle();">
               {%if result['profile_img'] == none%} 
               <img src="/media/{{result['profile_img']}}"/>
               {%else%}
               <img src="/media/profile.png"/>
              {%endif%}
              </div>
              <div class="menu">
                <h3>Someone Famous<br /><span>Website Designer</span></h3>
                <ul>
                  <li>
                    <img src="/static/images/user.png" /><a href="/profile">My Profile</a>
                  </li>
    
                  <li><img src="/static/images/question.png" /><a href="/contact">Contact Us</a></li>
                  <li>
                    <img src="/static/images/logout.png" /><a href="/logout">Logout</a>
                  </li>
                </ul>
              </div>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>

  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="profile-nav col-md-3">
        <div class="panel">
          <div class="user-heading round">
            <a href="#">
              <img src="/media/{{result['profile_img']}}" alt="">
            </a>
            <h1>{{result['name']}}</h1>
          
          </div>

          <ul class="nav nav-pills nav-stacked">



          </ul>
        </div>
      </div>
      <div class="profile-info col-md-9 panel">
        <div class="bio-graph-heading">
         
        </div>
        <form method="POST">
        <div class="panel-body bio-graph-info border">
          <h1>Bio</h1>
          
          
          <div class="row">
            <div class="bio-row">
              <p><span>Full Name </span>:<input type="text" value="{{result['name']}}" name="name"> </p>
            </div>
            <div class="bio-row">
              <p><span>User Id</span>: 000000{{result['id']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Email </span>:<input type="text" value="{{result['email']}}" name="email"></p>
            </div>
            <div class="bio-row">
              <p><span>Birthday</span>:<input type="date" value="{{result['dob']}}" name="date"></p>
            </div>
            <div class="bio-row">
              <p><span>Role </span>: {{result['role']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Gender</span>:<input type="text" value="{{result['gender']}}" name="gender"></p>
            </div>
            <div class="bio-row">
              <p><span>Education </span>:<input type="text" value="{{result['educational_level']}}" name="education"></p>
            </div>
            <div class="bio-row">
              <p><span>Subject </span>:<input type="text" value="{{result['subject']}}" name="subject"></p>
            </div>
            
            
              <div class="container py-5 h-25">
   <div class="row justify-content-center align-items-center h-25">
     <div class="col-12 col-lg-9 col-xl-7">
       <div class="card card-registration" style="border-radius: 5px; background-color: transparent; border: none;"> <!-- Removed border -->
         <div class="card-body p-3 p-md-4"> <!-- Reduced padding -->
           <h4 class="mb-3 pb-1 pb-md-0 mb-md-4" style="font-size: 1.5rem;">Linkedin</h4> <!-- Reduced font size -->
     

             <div class="row">
               <div class="col-md-6 mb-3"> <!-- Reduced margin -->
                 <div data-mdb-input-init class="form-outline">
                   <input type="text" class="form-control form-control-sm" name="linkedin"> <!-- Reduced input size -->
                   <label class="form-label" for="linkedin">Linkedin profile Link</label>
                 </div>
               </div>
             </div>
        
           
         </div>
       </div>
     </div>
   </div>
</div>
          </div>
        </div>
        <button type="submit" class="btn btn-success">Done</button>
         </form>
      </div>
    </div>
  </div>
  </div>
  </div>

  <!-- Scripts -->
  <!-- Bootstrap core JavaScript -->
  <script src="/static/vendor/jquery/jquery.min.js"></script>
  <script src="/static/vendor/bootstrap/js/bootstrap.min.js"></script>
  <script src="/static/js/isotope.min.js"></script>
  <script src="/static/js/owl-carousel.js"></script>
  <script src="/static/js/counter.js"></script>
  <script src="/static/js/custom.js"></script>
<script>
  function menuToggle() {
    const toggleMenu = document.querySelector(".menu");
    toggleMenu.classList.toggle("active");
  }
</script>
</body>

</html>