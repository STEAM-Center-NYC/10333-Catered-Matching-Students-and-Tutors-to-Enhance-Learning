<body>
  {%with messages = get_flashed_messages()%}
  {%if messages%}
  {%for message in messages%}
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <h3>{{ message }}</h3>
  </div>
  {%endfor%}
  {%endif%}
  {%endwith%}

  <header class="header-area header-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="index.html" class="logo border-btn2">
              <h1>Tutoria</h1>
            </a>
            <!-- ***** Logo End ***** -->
            <!-- ***** Serach Start ***** -->

            <!-- ***** Serach Start ***** -->
            <!-- ***** Menu Start ***** -->
            <ul class="nav top">


              <li class="scroll-to-section"><a href="/home" class="">Home</a></li>
              <li class="scroll-to-section"><a href="/contact">Contacts</a></li>
            </ul>
            <a class='menu-trigger'>
              <span>Menu</span>
            </a>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>

  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="profile-nav col-md-3">
        <div class="panel">
          <div class="user-heading round">
            <a href="#">
              <img src="/media/{{result['profile_img']}}" alt="">
            </a>
            <h1>{{result['name']}}</h1>
            <p>{{result['email']}}</p>
          </div>

          <ul class="nav nav-pills nav-stacked">


            <li>
              
              <form method="POST" enctype="multipart/form-data" class="fa fa-edit">
                Change profile picture:
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
               <div class="pad10" >{{form.hidden_tag()}}</div> 
                {{form.file()}}
                <div class="pad10" >{{form.submit()}}</div>
              </form>
            </li>
          </ul>
        </div>
      </div>
      <div class="profile-info col-md-9 panel">
        <div class="bio-graph-heading">
         
        </div>
        <div class="panel-body bio-graph-info border">
          <h1>Bio</h1>
          <div class="row">
            <div class="bio-row">
              <p><span>Full Name </span>: {{result['name']}}</p>
            </div>
            <div class="bio-row">
              <p><span>User Id</span>: 000000{{result['id']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Email </span>: {{result['email']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Birthday</span>:{{result['dob']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Role </span>: {{result['role']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Gender</span>: {{result['gender']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Education </span>: {{result['educational_level']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Subject </span>: {{result['subject']}}</p>
            </div>
            
          </div>
        </div>
        <a class="btn btn-success" href="/edit">Edit</a>
      </div>
    </div>
  </div>
  </div>
  </div>

  <!-- Scripts -->
  <!-- Bootstrap core JavaScript -->
  <script src="/static/vendor/jquery/jquery.min.js"></script>
