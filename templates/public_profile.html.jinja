</head>

<body>

  <header class="header-area header-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="/home" class="logo border-btn2">
              <h1>Tutoria</h1>
            </a>
            <!-- ***** Logo End ***** -->
            <!-- ***** Serach Start ***** -->

            <!-- ***** Serach Start ***** -->
            <!-- ***** Menu Start ***** -->
            <ul class="nav top">


            </ul>
            <a class='menu-trigger'>
              <span>Menu</span>
            </a>
          
       <div class="action">
              <div class="profile" onclick="menuToggle();">
                {%if result['profile_img'] == none%} 
               <img src="/media/profile.png"/>   
               {%else%}
               <img src="/media/{{result['profile_img']}}"/>
              {%endif%}
              </div>
              <div class="menu">
                <h3>Someone Famous<br /><span>Website Designer</span></h3>
                <ul>
                  <li>
                    <img src="/static/images/user.png" /><a href="/profile">My profile</a>
                  </li>
    
                  <li><img src="/static/images/question.png" /><a href="/contact">Contact Us</a></li>
                  <li>
                    <img src="/static/images/logout.png" /><a href="/logout">Logout</a>
                  </li>
                </ul>
              </div>
            </div>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>
  
  {%with messages = get_flashed_messages()%}
  {%for message in messages%}
  <div class="alert alert-primary alert-dismissible fade show" role="alert">
   <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    <h3>{{ message }}</h3>
  </div>
  {%endfor%}
  {%endwith%}

  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="profile-nav col-md-3">
        <div class="panel">
          <div class="user-heading round">
            <a href="#">
                {%if result['profile_img'] == none%} 
               <img src="/media/{{result['profile_img']}}"/>
               {%else%}
               <img src="/media/profile.png"/>
              {%endif%}
            </a>
            <h1>{{result['name']}}</h1>
               <a href="{{result['linkedin']}}" class="logo border-btn2" id="linkedin">LinkedIn</a>
          </div>
{%if rating['AVG(rating)'] != None %}
  <div>Rating: {{ "%0.1f" | format(rating['AVG(rating)'])}}</div>
{%else%}
  <div>Rating: N/A</div>
{%endif%}
          <form method='POST'>
            <div>
            <h5 id="review">Submit Review</h5>
              <ul class="rate-area">
                <input type="radio" id="5-star" name="rating" value="5" /><label for="5-star" title="Amazing">1
                  stars</label>
                <input type="radio" id="4-star" name="rating" value="4" /><label for="4-star" title="Good">2
                  stars</label>
                <input type="radio" id="3-star" name="rating" value="3" /><label for="3-star" title="Average">3
                  stars</label>
                <input type="radio" id="2-star" name="rating" value="2" /><label for="2-star" title="Not Good">4
                  stars</label>
                <input type="radio" id="1-star" name="rating" value="1" /><label for="1-star" title="Bad">5 star</label>
              </ul>
            </div>
            <div>
              <textarea class="review" name="review" placeholder="Enter Your Reivew Here.">

</textarea>
            </div>

            <input type="submit" class="form-control btn btn-primary" value="Submit Review">
          </form>

        </div>
      </div>
      <div class="profile-info col-md-9 panel">
        <div class="bio-graph-heading">

        </div>
        <div class="panel-body bio-graph-info border">
          <h1>Bio</h1>
          <div class="row">
            <div class="bio-row">
              <p><span>Full Name </span>: {{result['name']}}</p>
            </div>
            <div class="bio-row">
              <p><span>User Id</span>: 000000{{result['id']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Email </span>: {{result['email']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Birthday</span>:{{result['dob']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Role </span>: {{result['role']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Gender</span>: {{result['gender']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Education </span>: {{result['educational_level']}}</p>
            </div>
            <div class="bio-row">
              <p><span>Subject </span>: {{result['subject']}}</p>
            </div>
          </div>
        </div>

        <div class="border pad margin">
          <h6>Reviews:</h6>
          {%for x in review%}
          <div class="border pad">
            <h6>{{x.name}}: {{x.rating}} stars</h6>
            <p>{{x['review']}}</p>
          </div> 
          {%endfor%}
        </div>

      </div>
    </div>
  </div>
  </div>
  </div>


  <!-- Scripts -->
  <!-- Bootstrap core JavaScript -->
<script src="/static/vendor/jquery/jquery.min.js"></script>
<script src="/static/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="/static/js/isotope.min.js"></script>
<script src="/static/js/owl-carousel.js"></script>
<script src="/static/js/counter.js"></script>
<script src="/static/js/custom.js"></script>
<script>
  function menuToggle() {
    const toggleMenu = document.querySelector(".menu");
    toggleMenu.classList.toggle("active");
  }
</script>
</body>

</html>